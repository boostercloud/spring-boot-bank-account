schema {
    query: Query
    mutation: Mutation
}

input CreateBankAccountInput {
    owner: ID!
}

input DepositInput {
    iban: ID!
    amount: Int!
}

input WithdrawInput {
    iban: ID!
    amount: Int!
}

type Mutation {
    CreateBankAccount(input: CreateBankAccountInput): Boolean
    Deposit(input: DepositInput): Boolean
    Withdraw(input: WithdrawInput): Boolean
}

type Query {
    BankAccount: BankAccount
}

type BankAccount {
    iban: ID!
    owner: ID!
    balance: Int
}